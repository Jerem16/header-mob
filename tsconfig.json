{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@src/*": ["src/*"],
      "@amplify/*": ["amplify/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@assets/*": ["src/assets/*"],
      "@context/*": ["src/context/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@public/*": ["public/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/utils/context/NavigationContext.tsx",
    "src/components/header/utils/HiddenDelayComponent.tsx",
    "src/components/svg_Icon/utils/Arrow.jsx",
    "src/utils/context/utils/createUseContext.tsx",
    "src/components/header/HeaderGhost.jsx",
    "src/utils/setT.js",
    "app/ScrollSectionsWrapper.jsx",
    "src/home/about/AboutCard.jsx",
    "src/home/about/LoadMoreButton.jsx",
    "src/home/contact-section/contactForm/form.jsx",
    "src/home/contact-section/contactForm/formSuite.jsx",
    ".stock/middleware.ts",
    "src/components/LazyWrapper.tsx"
  ],
  "exclude": ["node_modules"]
}
